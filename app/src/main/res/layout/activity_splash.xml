<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashActivity">

    <ImageView
        android:id="@+id/splashDecoration1"
        android:layout_width="450dp"
        android:layout_height="450dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="150dp"
        android:rotation="@android:integer/config_longAnimTime"
        app:layout_constraintBottom_toTopOf="@+id/splashDecoration2"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_baseline_qr_code_scanner_24" />

    <ImageView
        android:id="@+id/splashDecoration2"
        android:layout_width="450dp"
        android:layout_height="450dp"
        android:layout_marginTop="456dp"
        android:layout_marginEnd="100dp"
        android:rotation="@android:integer/config_longAnimTime"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_qr_code_scanner_24_2" />

    <ImageView
        android:id="@+id/splashLogo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="130dp"
        android:layout_marginEnd="25dp"
        app:layout_constraintBottom_toTopOf="@+id/splashDecoration2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/splashDecoration1"
        app:srcCompat="@drawable/ic_logoword" />

</androidx.constraintlayout.widget.ConstraintLayout>